@model PredictorModel
@{
    ViewBag.Title = "Crop Recommendation Predictor";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Enter data</title>
</head>
<body>
<div class="container mt-5">
    <h2 class="text-center mb-4">Enter Soil and Weather Parameters</h2>

    <form asp-action="Index" method="post">
        <div class="form-group mb-3">
            <label asp-for="Nitrogen">Nitrogen (mg/kg):</label>
            <input required="true" asp-for="Nitrogen" class="form-control" type="number" step="any"/>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Phosphorus">Phosphorus (mg/kg):</label>
            <input required="true" asp-for="Phosphorus" class="form-control" type="number" step="any"/>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Potassium">Potassium (mg/kg):</label>
            <input required="true" asp-for="Potassium" class="form-control" type="number" step="any"/>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Temperature">Temperature (°C):</label>
            <input required="true" asp-for="Temperature" class="form-control" type="number" step="any"/>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Humidity">Humidity (%):</label>
            <input required="true" asp-for="Humidity" class="form-control" type="number" step="any"/>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Ph">pH:</label>
            <input required="true" asp-for="Ph" class="form-control" type="number" step="any"/>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Rainfall">Rainfall (mm):</label>
            <input required="true" asp-for="Rainfall" class="form-control" type="number" step="any"/>
        </div>
        <button class="btn btn-primary w-100">Submit</button>
    </form>
</div>
</body>
</html>