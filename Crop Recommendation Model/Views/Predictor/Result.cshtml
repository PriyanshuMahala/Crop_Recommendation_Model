@*
    Enhanced Crop Recommendation Result Page
*@
@model PredictorModel;
@using System.Collections

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Crop Recommendation Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-dark">

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">🌾 Crop Recommendation Results</h1>
    </div>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-success text-white">
            <h4>Your Input Parameters</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Parameter</th>
                    <th>Value</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        <strong>Nitrogen (N)</strong>
                    </td><td>@Model.Nitrogen</td>
                </tr>
                <tr>
                    <td>
                        <strong>Phosphorus (P)</strong>
                    </td><td>@Model.Phosphorus</td>
                </tr>
                <tr>
                    <td>
                        <strong>Potassium (K)</strong>
                    </td><td>@Model.Potassium</td>
                </tr>
                <tr>
                    <td>
                        <strong>Temperature</strong>
                    </td><td>@Model.Temperature &#8451;</td>
                </tr>
                <tr>
                    <td>
                        <strong>Humidity</strong>
                    </td><td>@Model.Humidity %</td>
                </tr>
                <tr>
                    <td>
                        <strong>pH</strong>
                    </td><td>@Model.Ph</td>
                </tr>
                <tr>
                    <td>
                        <strong>Rainfall</strong>
                    </td><td>@Model.Rainfall mm</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>🌱 Recommended Crop</h4>
        </div>
        <div class="card-body">
            <h5 class="mb-3">Prediction: <span class="text-success">@ViewData["Prediction"]</span></h5>

            <table class="table table-bordered">
                <tbody>
                <tr>
                    <td>
                        <strong>Name</strong>
                    </td><td>@ViewData["CROP_NAME"]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Indian Name</strong>
                    </td><td>@ViewData["CROP_HINGLISH"]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Best States</strong>
                    </td>
                    <td>
                        @{
                            var states = ViewData["CROP_STATES"] as IEnumerable<string>;
                            if (states != null)
                            {
                                foreach (var state in states)
                                {
                                    <span class="badge bg-secondary me-1">@state</span>
                                }
                            }
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Season</strong>
                    </td><td>@ViewData["CROP_SEASON"]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Best Soil Type</strong>
                    </td><td>@ViewData["CROP_soiltype"]</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>
</html>