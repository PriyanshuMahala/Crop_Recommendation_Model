@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light text-dark">

<div class="container py-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">🌿 Welcome to the Crop Recommendation System</h1>
        <p class="lead mb-5">Predict the most suitable crop for your soil and weather conditions using machine learning.</p>

        <div class="d-grid gap-3 col-6 mx-auto">
            <a class="btn btn-success btn-lg" asp-controller="Predictor" asp-action="Index">🌾 Use the Predictor</a>
            <a class="btn btn-outline-primary btn-lg" asp-controller="Home" asp-action="About">📖 About the Website</a>
        </div>
    </div>
</div>

</body>
</html>